<!DOCTYPE html>
<html>

<%- include('partials/header') %>

<body>

    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="/">Ymedu</a>
        <form action="/search" method="POST">
          <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="searchWord" id="searchWord" name="searchWord">
        </form>  
        <a href="/" class="btn btn-outline-danger" style="float: right;">Voltar</a>
    </nav>
    
    <div style="margin:30px 20px 30px 20px">
      <div class="row">
        <div class="col-sm-4">
        
            <h3>Nome do usuário</h3> <%= user.name %>
            <hr>
            <h3>Tipo de usuário:</h3>

            <% if(user.isadmin) { %>
                <p>Professor</p>
            <% } else { %>
                <p>Usuário</p>
            <% } %>
        </div>
        <div class="col-sm-8">
          <h2>Carrinho</h2>
          <hr>
          
          <div class="grid-chart">
            <% if ( cursosCarrinho && cursosCarrinho.length > 0) { %>
      
            <% for (curso of cursosCarrinho) { %>
      
            <div class="card" style="width: 200px">
                  <h4 class="card-title" style="padding: 5px"><a href="detalhar/<%= curso._id %>"><%= curso.courseTitle %></a></h4>
                  <img class="card-img-top" src="<%= curso.imgURL %>" alt="Card image">
                  <div class="card-body">
                    
                    <p class="card-text">R$<%= curso.valor %></p>
                    
                  </div>
            </div>

            <% } %>
          </div>
          <p>Valor total R$<%= valorTotal %> <a href="finalizar-compra/<%= carrinho._id %>" class="btn btn-info btn-sm">Finalizar Compra</a></p>
            <% } else { %>
              <h2 style="margin: 2rem;">Nada no carrinho :(</h2>
            <% } %>
          <hr>

          
          
    
        </div>
      </div>
    </div>
    
    </body>
</html>