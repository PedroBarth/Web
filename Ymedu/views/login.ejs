<!DOCTYPE html>
<html>

<%- include('partials/header') %>

<body>

    <body class="extern-body">
  <div class="d-flex justify-content-center">
    <div class="container">
      <h1>
        Login
      </h1>

      <% if (erro) { %>
        <p><%= erro %></p>
      <% } %>
      
      <hr>

      <form action="/login" method="POST">
        <div class="form-group">
          <label for="nickname">Login</label>
          <input type="text" class="form-control" name="nickname" id="nickname" placeholder="Seu login">
        </div>     
        
        <div class="form-group">
          <label for="pass">Senha</label>
          <input type="password" required class="form-control" id="pass" name="pass" placeholder="Digite sua senha">
        </div>

        
        <div class="form-group">
          <a href="/mudar-senha-email">Esqueceu sua senha?</a>
        </div>

        <button type="submit" class="btn btn-info">Entrar</button>
        <a href="/" class="btn btn-danger">Voltar</a>
      </form>



    </div>
  </div>

</body>

</html>